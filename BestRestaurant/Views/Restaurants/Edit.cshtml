@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

<div class="container">
  <div class="jumbotron text-center">
    <h2>Edit</h2>
  </div>

  <h4>Edit this restaurant: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.RestaurantId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select Cuisine")
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to restaurant list", "Index")</p>
</div>